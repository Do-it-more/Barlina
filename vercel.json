{
  "rewrites": [
    {
      "source": "/api/:match*",
      "destination": "https://YOUR_BACKEND_URL.onrender.com/api/:match*"
    },
    {
      "source": "/uploads/:match*",
      "destination": "https://YOUR_BACKEND_URL.onrender.com/uploads/:match*"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}